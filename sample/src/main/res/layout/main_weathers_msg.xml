<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:id="@+id/id_weather_msg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ly_chat_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center|top"
        android:background="#88555555"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/id_image_weather"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@drawable/xiaohei" />

        <TextView
            android:id="@+id/id_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:text="今天"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_text_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:text="小雨"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_text_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:text="温度"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>